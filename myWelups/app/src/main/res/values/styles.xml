<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TextBase">
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/background_promotional</item>
        <item name="colorPrimaryDark">@color/background</item>
        <item name="android:editTextColor">#767676</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/action_bar</item>
    </style>

    <!-- Theme bottom navigation -->
    <style name="bottomNavMenu" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/yellow_send</item>
        <item name="colorOnSurface">#FFFFFF</item>
        <item name="android:state_checked">true</item>
        <item name="android:navigationBarColor">@color/background_promotional</item>
    </style>

    <style name="ContentTextHome" parent="TextBase">
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:drawablePadding">@dimen/_8sdp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="lineTransaction">
        <item name="android:layout_marginLeft">@dimen/_20sdp</item>
        <item name="android:layout_marginRight">@dimen/_20sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_2sdp</item>
        <item name="android:background">@color/background_promotional</item>
    </style>

    <style name="TransactionTitleText" parent="TextBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textColor">@color/content_promotional</item>
    </style>

    <style name="TransactionContentText" parent="TextBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="GenerateTitleText" parent="TextBase">
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:layout_marginRight">@dimen/_8sdp</item>
        <item name="android:layout_marginLeft">@dimen/_8sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="layoutPrivateKey">
        <item name="android:background">@drawable/bg_color_gray</item>
        <item name="android:layout_marginTop">@dimen/_16sdp</item>
        <item name="android:layout_marginRight">@dimen/_16sdp</item>
        <item name="android:layout_marginLeft">@dimen/_16sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="titleInSetting" parent="TextBase">
        <item name="android:layout_marginRight">@dimen/_8sdp</item>
        <item name="android:layout_marginLeft">@dimen/_16sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@color/content_promotional</item>
    </style>

    <style name="layoutContentSetting">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:background">@color/background_promotional</item>
    </style>

    <style name="contentInSetting" parent="TextBase">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingBottom">@dimen/_12sdp</item>
        <item name="android:paddingTop">@dimen/_12sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/_8sdp</item>
        <item name="android:layout_marginLeft">@dimen/_16sdp</item>
        <item name="android:drawablePadding">@dimen/_8sdp</item>
    </style>

    <style name="BgCardDialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">@dimen/_12sdp</item>
        <item name="android:layout_marginLeft">@dimen/_12sdp</item>
        <item name="android:background">@drawable/bg_dialog</item>
    </style>

    <style name="layoutCenter">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>