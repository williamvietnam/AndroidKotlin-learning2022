<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemOnBoarding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/_8sdp">

    <ImageView
        android:id="@+id/imgLogoOnBoarding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/img_privacy_security" />

    <TextView
        android:id="@+id/tvTitleOnBoarding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="{title.on.boarding}"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_24sdp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvContentOnBoarding"
        android:layout_width="@dimen/_160sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_8sdp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="{content.on.boarding}"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

</LinearLayout>