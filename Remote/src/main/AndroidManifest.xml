<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".RemoteApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidOpenSourceProjects">
        <activity
            android:name=".commons.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.AndroidOpenSourceProjects.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".brands.lg.LGActivity"
            android:screenOrientation="fullSensor" />

        <activity
            android:name=".brands.sony.container.SonyActivity"
            android:screenOrientation="fullSensor" />

        <activity
            android:name=".brands.samsung.SamsungActivity"
            android:screenOrientation="fullSensor" />

        <activity
            android:name=".brands.panasonic.PanasonicActivity"
            android:screenOrientation="fullSensor" />
    </application>

</manifest>